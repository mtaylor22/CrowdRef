{
  "manifest_version": 2,

  "name": "CrowdRef",
  "description": "Let the crowd handle your citations.",
  "version": "1.0",
   "icons": {
          "16": "icon-tiny.png",
          "48": "icon-small.png",
          "128": "icon-large.png"
        },
  "browser_action": {
    "default_icon": "icon-small.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js", "jquery.js", "bitset.js", "webtoolkit.md5.js"]
  },
  "permissions": [
    "http://crowdref.atwebpages.com/*",
    "cookies",
    "tabs",
    "storage",
    "<all_urls>"
  ]
}
